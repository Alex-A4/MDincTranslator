<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/text_to_translate_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/small_round_corners"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/translated_text_layout">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_text_to_translate_layout"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintRight_toLeftOf="@id/translate_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:hintTextAppearance="@style/HintTextStyle">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/text_to_translate"
                    android:textColor="@android:color/black"
                    android:hint="@string/enter_text_to_translate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="@dimen/translate_text_height"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/clear_all_button"
            android:background="@drawable/round_corners"
            android:src="@drawable/ic_clear"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/input_text_to_translate_layout"
            app:layout_constraintBottom_toTopOf="@id/translate_button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/translate_button"
            android:background="@android:color/transparent"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:src="@drawable/ic_translate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clear_all_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/input_text_to_translate_layout"/>
    </android.support.constraint.ConstraintLayout>

    <ScrollView
        android:id="@+id/translated_text_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:scrollbarThumbVertical="@color/favorite_color"
        android:background="@drawable/small_round_corners"
        android:padding="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_to_translate_layout"
        app:layout_constraintBottom_toTopOf="@id/languages_swap_layout">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/translated_text"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>



    <android.support.constraint.ConstraintLayout
        android:id="@+id/languages_swap_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/from_language_text"
            style="@style/LanguageText"
            android:layout_width="wrap_content"
            android:text="From"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@id/swap_languages_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageButton
            android:id="@+id/swap_languages_button"
            android:src="@drawable/ic_swap"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/to_language_text"
            style="@style/LanguageText"
            android:text="To"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/swap_languages_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>